<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

<!-- LOGGER -->
	<type name="PandaGroup\AnzExtender\Logger\Handler">
		<arguments>
			<argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
		</arguments>
	</type>
	<type name="PandaGroup\AnzExtender\Logger\Logger">
		<arguments>
			<argument name="name" xsi:type="string">PandaGroup/AnzExtender</argument>
			<argument name="handlers"  xsi:type="array">
				<item name="system" xsi:type="object">PandaGroup\AnzExtender\Logger\Handler</item>
			</argument>
		</arguments>
	</type>

<!-- CHECKOUT RESPONSE -->
	<type name="Magenest\Anz\Controller\Checkout\Response">
		<plugin name="controller_checkout_response_plugin"
				type="PandaGroup\AnzExtender\Plugin\Anz\Controller\Checkout\Response"
				sortOrder="1"
				disabled="false"/>
	</type>

	<!-- Override to change redirects after unsuccessful payment from 'checkout/cart' to 'checkout/onepage/error' -->
	<preference for="Magenest\Anz\Controller\Checkout\Response" type="PandaGroup\AnzExtender\Controller\Checkout\Response" />

</config>

