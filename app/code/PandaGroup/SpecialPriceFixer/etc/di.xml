<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

<!-- LOGGER -->

	<type name="PandaGroup\SpecialPriceFixer\Logger\Handler">
		<arguments>
			<argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
		</arguments>
	</type>
	<type name="PandaGroup\SpecialPriceFixer\Logger\Logger">
		<arguments>
			<argument name="name" xsi:type="string">PandaGroup/SpecialPriceFixer</argument>
			<argument name="handlers"  xsi:type="array">
				<item name="system" xsi:type="object">PandaGroup\SpecialPriceFixer\Logger\Handler</item>
			</argument>
		</arguments>
	</type>

</config>

