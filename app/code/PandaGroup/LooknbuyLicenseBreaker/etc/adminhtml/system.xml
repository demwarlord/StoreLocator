<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="looknbuy">
            <group id="license" showInDefault="0" showInWebsite="0" showInStore="0" />

            <group id="general">
                <field id="select_website" showInDefault="0" showInWebsite="0" showInStore="0" />
                <field id="link_title">
                    <validate>required-entry</validate>
                </field>
                <field id="heading_title">
                    <validate>required-entry</validate>
                </field>
                <field id="url_key">
                    <validate>required-entry</validate>
                </field>
                <field id="discount_label">
                    <validate>required-entry</validate>
                </field>
            </group>
        </section>
    </system>
</config>
