<script>
    require([
        'jquery',
        'prototype'
    ], function(jQuery){

        var collectSpan = jQuery('#check_attr_sorting_span');

        jQuery('#set_used_for_sort_by_option_button').click(function () {
            var params = {};
            new Ajax.Request('<?php echo $block->getAjaxUrl() ?>', {
                parameters:     params,
                loaderArea:     false,
                asynchronous:   true,
                onCreate: function() {
                    collectSpan.find('.collected').hide();
                    collectSpan.find('.processing').show();
                    jQuery('#check_attr_sorting_message_span').text('');
                },
                onSuccess: function(response) {
                    collectSpan.find('.processing').hide();

                    var resultText = '';
                    if (response.status > 200) {
                        resultText = response.statusText;
                    } else {
                        var json = response.responseJSON;
                        resultStatus = json.done;

                        if (resultStatus == '1') {
                            collectSpan.find('.collected').show();
                            resultText = 'Success: '+json.message;
                        } else {
                            resultText = 'Error: '+json.message;
                        }
                    }
                    jQuery('#check_attr_sorting_message_span').text(resultText);

                }
            });
        });

    });
</script>

