<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="catalog_category_view"/>
    <body>
        <move element="category.description" destination="page.top" before="-"/>
        <!--<move element="product_list_toolbar" destination="breadcrumbs" before="-"/>-->
        <referenceBlock name="page.main.title" remove="true"/>
        <referenceBlock name="category.image" remove="true"/>
        <referenceBlock name="category.product.addto.compare" remove="true"/>
        <referenceContainer name="sidebar.additional" remove="true"/>
        <referenceContainer name="content" htmlTag="section" htmlClass="catalog-main">
            <block class="Magento\Framework\View\Element\Template" name="wishlist.javascript" template="Magento_Wishlist::catalog/product/list/addto/javascript.phtml"/>
            <block class="Magento\Framework\View\Element\Template" name="quickview.minicart" template="Magento_Catalog::category/quickview-minicart.phtml"/>
            <block class="Magento\Framework\View\Element\Template" name="arrow.scroller" template="Magento_Theme::html/footer/arrow-scroller.phtml"/>
        </referenceContainer>
        <!--<referenceBlock name="breadcrumbs">-->
            <!--<block class="Magento\Catalog\Block\Product\ProductList\Toolbar" name="breadcrumbs.sorter" template="Magento_Catalog::navigation/sorter.phtml"/>-->
        <!--</referenceBlock>-->
        <referenceBlock name="page.main.title">
            <arguments>
                <argument name="css_class" xsi:type="string">catalog-main__title</argument>
            </arguments>
        </referenceBlock>
        <!--<referenceBlock name="product_list_toolbar" remove="true" />-->
        <referenceBlock name="category.products">
            <block class="Magento\Framework\View\Element\Template" name="suits.description" template="Magento_Theme::html/suits-description.phtml"/>
        </referenceBlock>
    </body>
</page>