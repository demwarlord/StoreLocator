<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <remove src="FishPig_WordPress/css/wordpress.css" />
    </head>
    <body>
        <referenceContainer name="sidebar.additional" remove="true"/>
        <referenceContainer name="page.top">
            <block class="Magento\Framework\View\Element\Template" name="facebook.page" template="FishPig_WordPress::social/fb.phtml" before="-"/>
            <block class="Magento\Cms\Block\Block" name="blog.header" before="breadcrumbs" >
                <arguments>
                    <argument name="block_id" xsi:type="string">blog-header</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
