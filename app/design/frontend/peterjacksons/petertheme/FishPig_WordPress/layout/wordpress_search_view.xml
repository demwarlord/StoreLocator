<page layout="2columns-left" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="page.main.title" destination="content" before="-"/>
		<referenceContainer name="content">
			<referenceContainer name="meta">
				<block name="post.meta.user" remove="true" />
				<block name="post.meta.categories" remove="true" />
				<block name="post.meta.tags" remove="true" />
			</referenceContainer>
		</referenceContainer>
		<referenceBlock name="wp.post_list.pager" remove="true" />
		<move element="wp.post.list.meta" destination="wp.post.list.entry" before="post.list.image"/>
    </body>
</page>