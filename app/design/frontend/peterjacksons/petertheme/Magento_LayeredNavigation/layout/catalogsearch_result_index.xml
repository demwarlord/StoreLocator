<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="sidebar.additional" remove="true"/>
        <referenceBlock name="catalogsearch.product.addto.compare" remove="true"/>
        <referenceBlock name="page.main.title">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Magento_Theme::html/search-title.phtml</argument>
            </action>
        </referenceBlock>
        <move element="page.main.title" destination="page.wrapper" after="header.container" />
        <referenceContainer name="sidebar.main" htmlClass="c-sidebar c-sidebar--categories layered-nav" htmlTag="section">
            <arguments>
                <argument name="css_class" xsi:type="string">layered-nav</argument>
            </arguments>
        </referenceContainer>

        <referenceBlock name="category-sidebar" remove="true"/>

    </body>
</page>
